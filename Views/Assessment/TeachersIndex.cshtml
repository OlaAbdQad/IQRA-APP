@model IEnumerable<iqraProject.DTOs.AssessmentDto>



@{
    Layout = null;
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] -IQRA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<div class="card-header" style="background-color: gold;">
    <div class="card-title">
        <h1 class="text-center" style="color: white;">Assessments</h1>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>



            <th>
                Update
            </th>
            <th>
                Details
            </th>
           
        </tr>
    </thead>
    <tbody>
        @foreach (var assessment in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => assessment.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => assessment.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => assessment.Description)
            </td>
           

            <td>
                <a asp-action="Update" asp-route-id="@assessment.Id">Update</a>
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@assessment.Id">Details</a>
            </td>
            
        </tr>
        }
    </tbody>
</table>
<button style="background-color: green;"><a style="text-decoration: none; color:white" asp-controller="Assessment" asp-action="CreateForTeacher">Create Assessment</a> </button>
<button style="background-color: green;"><a style="text-decoration: none; color:white" asp-controller="Teacher" asp-action="Profile">Back to Profile</a> </button>

