@{
    Layout = null;
}

@model iqraProject.DTOs.AddOptionRequestModel
@using iqraProject.Enums

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IQRA</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>




<div class="container">
    <div class="row justify-content-center">
        <div class=" card col-md-6">
            <div class="card-body ">
                <div class="bg-light">
                    <h1 class="tagcolor" style="color:mediumblue">Add an Option</h1>
                    <p class="tagcolor" style="color:mediumblue">Kindly add an Option.</p>
                    <hr class="tagcolor" style="color:mediumblue">

                </div>
                <form asp-action="Create" enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row">
                        <div class="form-group col-sm-6">
                            <label asp-for="Label" class="control-label"></label>
                            <input asp-for="Label" class="form-control" />
                            <span asp-validation-for="Label" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-6">
                            <label asp-for="Text" class="control-label"></label>
                            <input asp-for="Text" class="form-control" />
                            <span asp-validation-for="Text" class="text-danger"></span>
                        </div>
                        @* <div class="form-group">
                            <label class="control-label">Upload audio file</label>
                            <input name="optionSound" type="file" class="form-control" />
                        </div> *@
                        <div class="form-group col-sm-6">
                            <select asp-for = "OptionType" asp-items="Html.GetEnumSelectList<OptionType>()"></select>
                        </div>
                        <div class="form-group col-sm-6">
                            <select asp-for = "OptionStatus" asp-items="Html.GetEnumSelectList<OptionStatus>()"></select>
                        </div>
                       
                        @* <div class="col-md-6" style="margin-top: 20px; font-size: larger; font-weight: bold; color: darkcyan">
                            <label  class="control-label">Options</label>
                            <select asp-for="QuestionId" class="form-control" asp-items="ViewBag.Question" required>
                                <option value="">--Select Question for this Option--</option>
                            </select>
                        </div> *@

                        <div class="col-md-6" style="margin-top: 20px; font-size: larger; font-weight: bold; color: darkcyan">
                            <label  class="control-label">Question</label>
                            <select asp-for="QuestionId" class="form-control" asp-items="ViewBag.Question" required>
                                <option value="">--Select Question--</option>
                            </select>
                        </div>
                        
                    </div>

                   
                    <div class="form-group ">
                        <input href="#myModal" type="submit" value="Submit" class="btn btn-success trigger-btn col-sm-12" data-toggle="modal" />
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

