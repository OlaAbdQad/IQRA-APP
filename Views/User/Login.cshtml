@{
    Layout = null;
}
@model iqraProject.DTOs.UserLoginDto

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/login.css" />
</head>

<body style="background-image: url('/MyImages/login.jpg'); background-size:cover; background-repeat:no-repeat;">
    <div class="login">

        <h4>@ViewBag.error</h4>
        <form asp-action="Login">
            <div class="form-row">
                <h3>Login page</h3>
                <div class="form-group col-sm-2">
                    <label class="control-label">Email</label>
                    <input type="text" name="Email" class="form-control" />
                </div>
                <div class="form-group col-sm-2">
                    <label class="control-label">Password</label>
                    <input type="password" name="password" class="form-control" />
                </div>

                <div class="form-group">
                    <input href="#myModal" type="submit" value="Submit" class="btn btn-success trigger-btn col-sm-20"
                        data-toggle="modal" />
                </div>
            </div>
        </form>
    </div>

</body>
